# clculating speed
from random import choice


def calculate_speed():
    distance = float(input("Write the distance (in meters): "))  # User input for distance
    time = float(input("write the time(in seconds): "))  # User input for time

    if time == 0:
        print("Time cannot be zero. Speed calculation is not possible.")
    else:
        speed = distance / time  # Speed calculation
        print("write your speed")

# calculatig force
def calculate_force():
