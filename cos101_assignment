# Main function to run the program
def physics_calculator():
    while True:
        print("Speed (Distance / Time)")
        print("Force (Mass * Acceleration)")

        if choice == '1':
            calculate_speed()  # Call the speed function
        elif choice == '2':
            calculate_force()  # Call the force function
        elif choice == '3':
            print("Goodbye!")

# Run the program
if __name__ == "__main__":
    physics_calculator()
